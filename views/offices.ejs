<!-- Home page - view -->

<!DOCTYPE html>
<html lang="en">
  <%- include('layouts/header'); -%>

  <body>
    <%- include('layouts/navbar'); -%> 
    
    <%- include('layouts/page-header'); -%>
    
    <!-- Main Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <h1>Offices</h1>
          <a href="/offices/add">Add new office</a>
          <% for (var i = 0; i < offices.length; i++) { %>
            <div class="post-preview">
              <h2 class="post-title">
                <%= offices[i].office %>
              </h2>
              <p>
                <%= offices[i].building %> 
              </p>
              <p>
                <%= offices[i].number %> 
              </p>
              <p>
                <%= offices[i].street %> 
              </p>
              <p>
                <%= offices[i].town %> 
              </p>
              <p>
                <%= offices[i].postcode %> 
                </p>
              <hr />
            </div>
            <% } %>
      </div>
    </div>

    <hr />

    <%- include('layouts/footer'); -%> <%- include('layouts/scripts'); -%>
  </body>
</html>
